

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <link rel="stylesheet" href="public/css/login.css">
  <script defer src="public/js/login.js"></script>
</head>

<body>
  <main id="main-holder">
    <h1 id="login-header">Login</h1>
    
    <div id="login-error-msg-holder">
      <p id="login-error-msg">Invalid username <span id="error-msg-second-line">and/or password</span></p>
    </div>
    
    <form id="login-form">
      <input type="text" name="username" id="username-field" class="login-form-field" placeholder="Username">
      <input type="password" name="password" id="password-field" class="login-form-field" placeholder="Password">
      <input type="submit" value="Login" id="login-form-submit">
      
    <input type="submit" value="signup" id="signup-form-submit">
    </form>
  </main>
  <script>
    const button = document.getElementById('login-form-submit')
    button.addEventListener('click', returnHome, false );
    async function returnHome(event){
        event.preventDefault()  
        window.location.href = "/";
    } 
    const button1 = document.getElementById('signup-form-submit')
    button1.addEventListener('click', returnSignup, false );
    async function returnSignup(event){
        event.preventDefault()  
        window.location.href = "signup";
    }
    </script>
</body>

